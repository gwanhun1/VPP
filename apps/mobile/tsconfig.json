    "strict": true,
    "paths": {
      "@/*": ["./src/*"],
      "@vpp/core-logic": ["../../core-logic/src"],
      "@vpp/core-logic/*": ["../../core-logic/src/*"]
    }
  },
  "include": [
    "**/*.ts",
